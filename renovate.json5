{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  timezone: 'Asia/Tokyo',
  prConcurrentLimit: 20,
  prHourlyLimit: 10,
  reviewers: [
    'Soli0222',
  ],
  'helm-values': {
    managerFilePatterns: [
      '/charts/.+/values\\.yaml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/charts/.+/values\\.yaml$/',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/charts/.+/values\\.yaml$/',
      ],
      matchStrings: [
        'repository:\\s*(?<depName>[^\\s]+)\\s+tag:\\s*["\'](?<currentValue>[^"\']+)["\']',
      ],
      datasourceTemplate: 'docker',
      versioningTemplate: 'docker',
    },
    {
      customType: 'regex',
      managerFilePatterns: [
        '/charts/.+/Chart\\.yaml$/',
      ],
      matchStrings: [
        '#\\s*renovate:\\s*image=(?<depName>[^\\s]+)\\nappVersion:\\s*["\']?(?<currentValue>[^"\'\\s]+)["\']?',
      ],
      datasourceTemplate: 'docker',
      versioningTemplate: 'docker',
    },
  ],
  packageRules: [
    {
      matchManagers: [
        'github-actions',
      ],
      commitMessageTopic: 'GitHub Action {{depName}}',
      automerge: true,
    },
    {
      matchDatasources: [
        'docker',
      ],
      automerge: false,
      commitMessagePrefix: 'chore(app):',
      labels: [
        'dependencies',
        'app-update',
      ],
      matchPackageNames: [
        '/^ghcr\\.io/soli0222/.*/',
        '/^soli0222/.*/',
      ],
    },
    {
      matchDatasources: [
        'docker',
      ],
      automerge: false,
      commitMessagePrefix: 'chore(deps):',
      labels: [
        'dependencies',
      ],
      matchPackageNames: [
        '/^postgres$/',
        '/^gotson/.*/',
        '/^deluan/.*/',
        '/^bellamy/.*/',
        '/^minio/.*/',
      ],
    },
    {
      matchUpdateTypes: [
        'major',
      ],
      automerge: false,
      labels: [
        'major-update',
      ],
    },
  ],
  postUpdateOptions: [
    'helmUpdateSubChartArchives',
  ],
  semanticCommits: 'enabled',
  prCreation: 'immediate',
  rebaseWhen: 'auto',
  dependencyDashboard: true,
  vulnerabilityAlerts: {
    enabled: true,
    labels: [
      'security',
    ],
  },
}
